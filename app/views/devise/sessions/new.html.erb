<div class="card card-login mx-auto mt-5">
  <div class="card-header">登录</div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="form-label-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: "required" %>
          <%= f.label :email %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-label-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: "required" %>
          <%= f.label :password %>
        </div>
      </div>
      <div class="form-group">
        <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end %>
      </div>
      <%= f.submit "登录", class: "btn btn-primary btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
