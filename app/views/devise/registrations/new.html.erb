<div class="card card-register mx-auto mt-5">
        <div class="card-header">注册账号</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: "required" %>
                <%= f.label :email %>
              </div>
            </div>
            <div class="form-group">
              <div class="form-row">
                <div class="col-md-6">
                  <div class="form-label-group">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br>
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", required: "required" %>
                    <%= f.label :password %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-label-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", placeholder:"Confirm password", required:"required"%>
                    <%= f.label :password_confirmation %>
                  </div>
                </div>
              </div>
            </div>
            <%= f.submit "注册", class: "btn btn-primary btn-block" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
