  </div>

  <div class="form-group row">
    <%= form.label :last_name, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :unit, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.text_field :unit, class: "form-control" %>
    </div>
  </div>

