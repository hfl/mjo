<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-file"></i>
    期刊
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>期刊名</th>
            <th>简介</th>
            <th>ISSN 号</th>
            <th colspan="3">编辑</th>
          </tr>
        </thead>

        <tbody>
          <% @journals.each do |journal| %>
            <tr>
              <td><%= journal.name %></td>
              <td><%= journal.about %></td>
              <td><%= journal.issn %></td>
              <td><%= link_to '查看', [:admin, journal] %></td>
              <td><%= link_to '修改', edit_admin_journal_path(journal) %></td>
              <td><%= link_to '删除', [:admin, journal], method: :delete, data: { confirm: '确认要删除么？' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
