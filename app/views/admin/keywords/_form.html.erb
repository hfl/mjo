      <%= form.text_field :article_id, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :keyword, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.text_field :keyword, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-md-2 col-md-10">
      <%= form.submit class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
