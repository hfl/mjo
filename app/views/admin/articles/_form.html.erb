<%= form_with(model: article, url: [:admin, article.issue.journal, article.issue, article], local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :issue, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.text_field :issue_id, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :title, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :abstract, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.text_area :abstract, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :paper, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
      <%= form.file_field :paper, class: "form-control-file" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-md-2 col-md-10">
      <%= form.submit class: "btn btn-primary mb-2" %>
    </div>
  </div>
<% end %>
