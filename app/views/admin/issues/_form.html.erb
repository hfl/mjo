<%= form_with(model: issue, url: [:admin, issue.journal, issue], local: true) do |form| %>
  <% if issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= form.label :journal_id, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
    <%= form.text_field :journal_id, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :volume, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
    <%= form.text_field :volume, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :number, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
    <%= form.text_field :number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :year, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
    <%= form.text_field :year, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :cover, class: "col-md-2 col-form-label" %>
    <div class="col-md-10">
    <%= form.file_field :cover, class: "form-control-file" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-md-2 col-md-10">
      <%= form.submit class: "btn btn-primary mb-2" %>
    </div>
  </div>
<% end %>
