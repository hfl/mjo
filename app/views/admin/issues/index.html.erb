<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table>
  <thead>
    <tr>
      <th>Journal</th>
      <th>Volume</th>
      <th>Number</th>
      <th>Year</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.journal.id %></td>
        <td><%= issue.volume %></td>
        <td><%= issue.number %></td>
        <td><%= issue.year %></td>
        <td><% if issue.cover.attached? %>
          Y
          <% else %>
          N
          <% end %>
        </td>
        <td><%= link_to 'Show', admin_journal_issue_path(issue.journal, issue) %></td>
        <td><%= link_to 'Edit', edit_admin_journal_issue_path(issue.journal, issue) %></td>
        <td><%= link_to 'Destroy', admin_journal_issue_path(issue.journal, issue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_admin_journal_issue_path(@journal) %>
